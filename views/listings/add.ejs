<% layout("/layout/boilerplate") -%>
<body>
      <div class="row">
            <div class="col-8 offset-2">
                  <h3>Add new listing</h3>

                  <form action="/listing" method="POST" class="needs-validation" novalidate >

                        <div class="mb-3">
                              <label for="listing[title]" class="form-label">Title</label>
                              <input type="text" id="listing[title]" placeholder="Add a catchy title" name="listing[title]" class="form-control" required><br>  
                              <div class="valid-feedback">Title looks good</div>
                              <div class="invalid-feedback">Enter a proper Title</div>                      
                        </div>

                        <div class="mb-3">
                              <label for="listing[description]" class="form-label">Description</label>
                              <textarea id="listing[description]" name="listing[description]"  class="form-control" required></textarea>
                              <div class="valid-feedback">Description looks good</div>
                              <div class="invalid-feedback">Enter a proper description</div>  
                        </div>
                        <div class="mb-3">
                              <label for="listing[image]" class="form-label">Image URL</label>
                              <input type="text" id="listing[image]" placeholder="Enter image url" name="listing[image]" class="form-control" >
                              <div class="valid-feedback">Image URL looks good</div>
                              <div class="invalid-feedback">Enter a proper image URL</div>
                        </div>

                        <div class="row">
                              <div class="mb-3 col-md-4">
                                    <label for="listing[price]" class="form-label">Price</label>
                                    <input type="number" id="listing[price]" placeholder="2000" name="listing[price]" class="form-control" required>
                                    <div class="valid-feedback">Price looks good</div>
                                    <div class="invalid-feedback">Enter a proper price</div>
                              </div>
                              <div class="mb-3 col-md-8">
                                    <label for="listing[country]" class="form-label">Country</label>
                                    <input type="text" id="listing[country]" placeholder="India" name="listing[country]" class="form-control" required>
                                    <div class="valid-feedback">Country looks good</div>
                                    <div class="invalid-feedback">Enter a proper country name</div>
                              </div>
      

                        </div>


                        <div class="mb-3">
                              <label for="listing[location]" class="form-label">Location</label>
                              <input type="text" id="listing[location]" placeholder="Bhubneswar, Odisha" name="listing[location]" class="form-control" required>
                              <div class="valid-feedback">Location looks good</div>
                              <div class="invalid-feedback">Enter a proper location</div>

                        </div>
            

            
                        <button class="btn btn-dark  add-btn" type="submit">Save</button>
            
                  </form>
            </div>
      </div>

      
</body>
